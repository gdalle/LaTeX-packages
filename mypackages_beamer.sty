\AtBeginSection[] % TOC before each section
{
 \begin{frame}
  \frametitle{Table of Contents}
  \tableofcontents[currentsection]
 \end{frame}
}

\let\emph\textbf % emph as bold

\newenvironment{bitemize}{\begin{itemize} \itemsep20pt}{\end{itemize}} % spaced itemize
\newenvironment{benumerate}{\begin{enumerate} \itemsep20pt}{\end{enumerate}} % spaced enumerate

\newtheorem{remark}{Remark}
\newtheorem{proposition}{Proposition}
\newenvironment{myproof}{\textbf{Proof:}}{\hfill$\qedhere$}

