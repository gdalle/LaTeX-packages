\ProvidesPackage{mypackages_beamer}

\usetheme{Madrid}
\usecolortheme{beaver}

\definecolor{mathcolor}{rgb}{0.3, 0., 0.8}
\usefonttheme[onlymath]{serif} % normal math font
\setbeamercolor{math text}{fg=mathcolor} % equations
\setbeamercolor{math text displayed}{fg=mathcolor}

\setbeamertemplate{caption}[numbered] % numbeder images

\setbeamertemplate{blocks}[rounded][shadow=false] % rounded blocks

