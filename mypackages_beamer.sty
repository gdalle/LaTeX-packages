\ProvidesPackage{mypackages_beamer}

\RequirePackage{mypackages}

\usetheme{Madrid}
\usecolortheme{beaver}

\usefonttheme[onlymath]{serif} % normal math font
\setbeamercolor{math text}{fg=blue} % blue equations
\setbeamercolor{math text displayed}{fg=blue}

\setbeamertemplate{caption}[numbered]

\hypersetup{
    colorlinks,
    citecolor=black,
    linkcolor=black
} % black links to avoid parenthesis trouble

